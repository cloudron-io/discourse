{{~raw-plugin-outlet name="topic-list-header-before"
  context=(hash
    canBulkSelect=@canBulkSelect
    toggleInTitle=@toggleInTitle
    hideCategory=@hideCategory
    showPosters=@showPosters
    showLikes=@showLikes
    showOpLikes=@showOpLikes
    order=@order
    ascending=@ascending
    sortable=@sortable
    listTitle=@listTitle
    bulkSelectEnabled=@bulkSelectEnabled
    canDoBulkActions=@canDoBulkActions
  )
~}}
{{#if @bulkSelectEnabled}}
  <th class="bulk-select topic-list-data">
    {{#if @canBulkSelect}}
      {{raw "flat-button" class="bulk-select" icon="list" title="topics.bulk.toggle"}}
    {{/if}}
  </th>
{{/if}}
{{topic-list/header-column currentAscending=@ascending currentOrder=@order order="default" name=@listTitle bulkSelectEnabled=@bulkSelectEnabled showBulkToggle=@toggleInTitle canBulkSelect=@canBulkSelect canDoBulkActions=@canDoBulkActions}}
{{#if @showPosters}}
  {{topic-list/header-column currentAscending=@ascending currentOrder=@order order="posters" ariaLabel=(i18n "category.sort_options.posters")}}
{{/if}}
{{topic-list/header-column currentAscending=@ascending currentOrder=@order sortable=@sortable number=true order="posts" name="replies"}}
{{#if showLikes}}
  {{topic-list/header-column currentAscending=@ascending currentOrder=@order sortable=@sortable number=true order="likes" name="likes"}}
{{/if}}
{{#if showOpLikes}}
  {{topic-list/header-column currentAscending=@ascending currentOrder=@order sortable=@sortable number=true order="op_likes" name="likes"}}
{{/if}}
{{topic-list/header-column currentAscending=@ascending currentOrder=@order sortable=@sortable number=true order="views" name="views"}}
{{topic-list/header-column currentAscending=@ascending currentOrder=@order sortable=@sortable number=true order="activity" name="activity"}}
{{~raw-plugin-outlet name="topic-list-header-after"
  context=(hash
    canBulkSelect=@canBulkSelect
    toggleInTitle=@toggleInTitle
    hideCategory=@hideCategory
    showPosters=@showPosters
    showLikes=@showLikes
    showOpLikes=@showOpLikes
    order=@order
    ascending=@ascending
    sortable=@sortable
    listTitle=@listTitle
    bulkSelectEnabled=@bulkSelectEnabled
    canDoBulkActions=@canDoBulkActions
  )
~}}
